<div class="mib-section-calculator">
  <div class="tarifs-title text-center">
    <h1><%= t('tarifs.prices') %></h1>
  </div>
  <div class="tarifs-wrapper">
    <div class="tarifs-transfert">
      <h3><%= t('tarifs.transfert.title') %></h3>
      <p><%= t('tarifs.transfert.text') %></p>
      <div class="warming">
        <i class="fas fa-exclamation-triangle fa-2x"></i>
        <p>Les frais de p√©age et tunnel ne sont pas inclus.</p>
      </div>
    </div>
    <div class="tarifs-dispo">
      <h3><%= t('tarifs.dispo.title') %></h3>
      <p><%= t('tarifs.dispo.text') %></p>
      <br>
      <div class="text-center">
        <%= link_to t('home.btn'), root_path(anchor: 'contact'), class: "btn-contact", id: "btn-tarif" %>
      </div>
    </div>
  </div>
  <div class="calculator">
    <div class="calculator-title text-center">
      <h3><%= t('tarifs.calculator') %></h3>
    </div>
    <div class="container-fluid">
      <div class="wrapper-form">
        <form class="form">
          <div class="form-group">
            <label for="from"><i class="far fa-dot-circle"></i></label>
            <input type="text" id="from" placeholder="Origin" class="form-control">
          </div>
          <div class="form-group">
            <label for="to"><i class="fas fa-map-marker-alt"></i></label>
            <input type="text" id="to" placeholder="Destination" class="form-control">
          </div>
        </form>
        <div class="btns">
          <%= link_to 'RESET', calculator_path, class: "btn btn-warning btn-lg", id: "btn-reset" %>
          <button class="btn btn-success btn-lg" id="btn-mib">VALID</button>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div id="output"></div>
      <div id="googleMap"></div>
    </div>
  </div>
</div>

