<div class="mib-contact" id="contact">
  <div class="title-section">
    <h2><%= t('contact.title') %></h2>
  </div>
  <div class="contact-infos text-center">
    <div class="info-details">
      <div class="info-icon">
        <%= image_tag 'icon-mobile.svg', alt: 'Icon Mobile', loading: 'lazy', height:50 %>
      </div>
      <p>06.13.35.23.49</p>
    </div>
    <div class="info-details">
      <div class="info-icon">
        <%= image_tag 'icon-envelop.svg', alt: 'Icon Envelop', loading: 'lazy', height:50 %>
      </div>
      <p>abdelk@mibsuit.com</p>
    </div>
    <div class="info-details">
      <div class="info-icon">
        <%= image_tag 'icon-mapmarker.svg', alt: 'Icon Map Marker', loading: 'lazy', height:50 %>
      </div>
      <p>459 Rue Francois Estier  <br> 01170 Echenevex</p>
    </div>
  </div>
  <div class="contact-form">
    <div class="form-wrapper">
      <form action="https://formspree.io/f/moqrvrap" method="POST" >
        <input type="text" name="name" id="full-name" autocomplete="off" required placeholder="<%= t('contact.label.name') %>" />
        <input type="email" name="_replyto" autocomplete="off" required placeholder="<%= t('contact.label.email') %>"/>
        <input type="phone" name="phone" autocomplete="off" required placeholder="<%= t('contact.label.phone') %>"/>
        <textarea row="3" name="message" id="message" required placeholder="<%= t('contact.label.message') %>"></textarea>
        <input type="hidden" name="_subject" id="email-subject" value="Formulaire MIB">
        <input type="submit" value="<%= t('contact.button') %>" class="btn-contact">
      </form>
    </div>
  </div>
</div>
