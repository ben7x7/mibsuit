<div class="mib-calculator" >
  <div class="calculator-wrapper">
    <div class="title-section title-devis text-center">
      <h2><%= t('tarifs.calculator') %></h2>
    </div>
    <div class="container-fluid" >
      <div class="wrapper-form">
        <form class="form">
          <div class="form-group">
            <label for="from">
              <%= image_tag 'icon-target.svg', alt: 'Icon Target', loading: 'lazy', height:25 %>
            </label>
            <input type="text" id="from" placeholder="Origin" class="form-control">
          </div>
          <div class="form-group">
            <label for="to">
              <%= image_tag 'icon-address.svg', alt: 'Icon Destination', loading: 'lazy', height:25 %>
            </label>
            <input type="text" id="to" placeholder="Destination" class="form-control">
          </div>
        </form>
        <div class="btns">
          <button class="btn btn-warning btn-lg" id="btn-reset">RESET</button>
          <button class="btn btn-success btn-lg" id="btn-mib">VALID</button>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div id="output"></div>
      <div id="googleMap"></div>
    </div>
  </div>
</div>
