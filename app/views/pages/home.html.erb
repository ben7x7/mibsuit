<div class="mib-section-calculator" id="calculator">
  <div class="tarifs-title text-center">
    <h1><%= t('tarifs.prices') %></h1>
  </div>
  <div class="tarifs-wrapper">
    <div class="tarifs-transfert">
      <h3><%= t('tarifs.transfert.title') %></h3>
      <p><%= t('tarifs.transfert.text') %></p>
      <div class="warming">
        <i class="fas fa-exclamation-triangle"></i>
        <p>Hors frais de péage & tunnel.</p>
      </div>
    </div>
    <div class="tarifs-dispo">
      <h3><%= t('tarifs.dispo.title') %></h3>
      <p><%= t('tarifs.dispo.text') %></p>
      <br>
      <div class="text-center">
        <%= link_to t('home.btn'), root_path(anchor: 'contact'), class: "btn-contact", id: "btn-tarif" %>
      </div>
    </div>
  </div>
  <div class="calculator" >
    <div class="calculator-title text-center">
      <h3><%= t('tarifs.calculator') %></h3>
    </div>
    <div class="container-fluid" >
      <div class="wrapper-form">
        <form class="form">
          <div class="form-group">
            <label for="from"><i class="far fa-dot-circle"></i></label>
            <input type="text" id="from" placeholder="Origin" class="form-control">
          </div>
          <div class="form-group">
            <label for="to"><i class="fas fa-map-marker-alt"></i></label>
            <input type="text" id="to" placeholder="Destination" class="form-control">
          </div>
        </form>
        <div class="btns">
          <button class="btn btn-warning btn-lg" id="btn-reset">RESET</button>
          <button class="btn btn-success btn-lg" id="btn-mib">VALID</button>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div id="output"></div>
      <div id="googleMap"></div>
    </div>
  </div>
</div>
<div class="mib-vehicule" id="vehicule">
  <div class="title-section">
    <h2 id="title-vehicule"><%= t('vehicule.title') %></h2>
  </div>
  <%= image_tag 'mib-toyota.WebP' %>
  <h4><%= t('vehicule.name') %></h4>
  <div class="vehicule-description">
    <p><%= t('vehicule.description') %></p>
  </div>
  <div class="grid-container">
    <img src="/assets/sm-image1.png" data-imagesrc="/assets/image1.png" alt="Toyota Camry" class="lightbox-enabled">
    <img src="/assets/sm-image2.png" data-imagesrc="/assets/image2.png" alt="Toyota Camry" class="lightbox-enabled">
    <img src="/assets/sm-image3.png" data-imagesrc="/assets/image3.png" alt="Toyota Camry" class="lightbox-enabled">
    <img src="/assets/sm-image4.png" data-imagesrc="/assets/image4.png" alt="Toyota Camry" class="lightbox-enabled">
  </div>
  <div class="lightbox-container">
    <div class="lightbox-image-wrapper">
      <button class="lightbox-btn left" id="left">
        <%= image_tag 'prev.png' %>
      </button>
      <img alt="Toyota" class="lightbox-image">
      <button class="lightbox-btn right" id="right">
        <%= image_tag 'next.png' %>
      </button>
    </div>
  </div>
</div>

<div class="mib-contact" id="contact">
  <div class="title-section">
    <h2><%= t('contact.title') %></h2>
  </div>
  <div class="contact-infos text-center">
    <div class="info-details">
      <div class="info-icon">
        <i class="fas fa-mobile-alt fa-2x"></i>
      </div>
      <p>06.13.35.23.49</p>
    </div>
    <div class="info-details">
      <div class="info-icon">
        <i class="far fa-envelope fa-2x"></i>
      </div>
      <p>abdelk@mibsuit.com</p>
    </div>
    <div class="info-details">
      <div class="info-icon">
        <i class="fas fa-map-marker-alt fa-2x"></i>
      </div>
      <p>459 Rue Francois Estier  <br> 01170 Echenevex</p>
    </div>
  </div>
  <div class="contact-form">
    <div class="form-wrapper">
      <form action="https://formspree.io/f/moqrvrap" method="POST" >
        <input type="text" name="name" id="full-name" autocomplete="off" required placeholder="<%= t('contact.label.name') %>" />
        <input type="email" name="_replyto" autocomplete="off" required placeholder="<%= t('contact.label.email') %>"/>
        <input type="phone" name="phone" autocomplete="off" required placeholder="<%= t('contact.label.phone') %>"/>
        <textarea row="3" name="message" id="message" required placeholder="<%= t('contact.label.message') %>"></textarea>
        <input type="hidden" name="_subject" id="email-subject" value="Formulaire SAP">
        <input type="submit" value="<%= t('contact.button') %>" class="btn-contact">
      </form>
    </div>
  </div>
</div>
